<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:onClick="resetGameButton"
        android:text="New Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/buttonnegative"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="playerTwoHealthDecrease"
        android:src="@drawable/ic_remove_black_24dp"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/currenthealthcountplayerTwo"
        app:layout_constraintEnd_toEndOf="@+id/buttonnegative"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonnegative"
        app:layout_constraintTop_toTopOf="@+id/playerTwoName"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/buttonpositive"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="playerTwoHealthIncrease"
        android:src="@drawable/ic_add_black_24dp"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/currenthealthcountplayerTwo"
        app:layout_constraintEnd_toEndOf="@+id/buttonpositive"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonpositive"
        app:layout_constraintTop_toTopOf="@+id/playerTwoName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currenthealthcountplayerTwo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="center"
        android:text="20"
        android:textSize="140px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerTwoName"
        app:layout_constraintVertical_bias="0.055" />

    <ImageButton
        android:id="@+id/buttonnegative"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="playerOneHealthDecrease"

        android:src="@drawable/ic_remove_black_24dp"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintTop_toTopOf="@+id/playerOneName"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/buttonpositive"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="playerOneHealthIncrease"
        android:src="@drawable/ic_add_black_24dp"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playerOneName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currenthealthcountplayerOne"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:text="20"
        android:textSize="140px"
        app:layout_constraintEnd_toEndOf="@+id/playerTwoName"
        app:layout_constraintStart_toStartOf="@+id/playerTwoName"
        app:layout_constraintTop_toBottomOf="@+id/playerOneName" />

    <EditText
        android:id="@+id/playerOneName"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:elevation="20dp"
        android:ems="10"

        android:gravity="center"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:text="Player 1"
        android:textSize="80px"
        app:layout_constraintEnd_toEndOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintStart_toStartOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/playerTwoName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="84dp"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:text="Player 2"
        android:textSize="80px"
        app:layout_constraintEnd_toEndOf="@+id/currenthealthcountplayerTwo"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="@+id/currenthealthcountplayerTwo"
        app:layout_constraintTop_toBottomOf="@+id/currenthealthcountplayerOne" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#9E9E9E"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


</android.support.constraint.ConstraintLayout>