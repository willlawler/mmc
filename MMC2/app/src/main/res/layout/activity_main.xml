<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:focusableInTouchMode="true">


    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="72dp"
        android:onClick="fortyHealthGame"
        android:text="40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:onClick="goToListScreen"
        android:text="Scores"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:onClick="twentyHealthGame"
        android:text="20"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button8"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:onClick="resetGameButton"
        android:text="New Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/buttonnegative"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="playerTwoHealthDecrease"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/currenthealthcountplayerTwo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/currenthealthcountplayerTwo"
        app:layout_constraintTop_toTopOf="@+id/playerTwoName"
        android:src="@drawable/ic_remove_black_24dp" />



    <ImageButton
        android:id="@+id/buttonpositive"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="playerTwoHealthIncrease"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/currenthealthcountplayerTwo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/currenthealthcountplayerTwo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playerTwoName"
        android:src="@drawable/ic_add_black_24dp" />

    <TextView
        android:id="@+id/currenthealthcountplayerTwo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:gravity="center"
        android:text="20"
        android:textSize="140px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/playerTwoName" />

    <ImageButton
        android:id="@+id/buttonnegative"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="playerOneHealthDecrease"

        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintTop_toTopOf="@+id/playerOneName"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/ic_remove_black_24dp" />

    <ImageButton
        android:id="@+id/buttonpositive"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="playerOneHealthIncrease"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playerOneName"
        android:src="@drawable/ic_add_black_24dp" />

    <TextView
        android:id="@+id/currenthealthcountplayerOne"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:ems="10"
        android:gravity="center"
        android:text="20"
        android:textSize="140px"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/playerOneName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/playerOneName"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="150dp"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:ems="10"
        android:gravity="center"
        android:elevation="20dp"

        android:inputType="textPersonName"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:text="Player 1"
        android:textSize="80px"
        app:layout_constraintLeft_toLeftOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/playerTwoName"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="83dp"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:maxLines="1"
        android:text="Player 2"
        android:textSize="80px"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintRight_toRightOf="@+id/currenthealthcountplayerOne"
        app:layout_constraintTop_toBottomOf="@+id/currenthealthcountplayerOne" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#9E9E9E"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>




</android.support.constraint.ConstraintLayout>